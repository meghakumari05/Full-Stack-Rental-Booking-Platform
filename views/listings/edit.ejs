<% layout("/layouts/boilerplate") %>  
<br>
<div class="col-8 offset-2">
    <h3>Edit your listing</h3>
 
    <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" class="needs-validation" novalidate  enctype="multipart/form-data">

        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input value="<%= listing.title %>" name="listing[title]" type="text" class="form-control" required>
        </div>
        
    <div class="mb-3">
         <label for="Description" class="form-label">Description</label>
        <textarea  name="listing[description]" class="form-control" type="text " required>  <%= listing.description %> </textarea>
        </div>

        <div class="mb-3">
            original image <br />
            <img src="<%= originalImageUrl%>" />
       </div>

 <div class="mb-3">
    <label for="Image" class="form-label">Upload New Image</label>
        <input  name="listing[image]" type="file" class="form-control">
       </div>

<div class="row">
         <div class="mb-3 col-md-4">
        <label for="Price" class="form-label">Price</label>
        <input value="<%= listing.price %>" name="listing[price]" type="text" class="form-control">
     </div>

         <div class="mb-3 col-md-8">
        <label for="Country" class="form-label">Country</label>
        <input value="<%= listing.country %>" name="listing[country]" type="text" class="form-control">
   </div>
</div>

<div class="mb-3">
            <label for="Location" class="form-label">Location</label>
            <input value="<%= listing.location %>" name="listing[location]" type="text" class="form-control">
      </div>


        <button class="btn btn-dark edit-btn mt-3">Edit</button>
        <br><br>
    </form>
</body>

</div>
